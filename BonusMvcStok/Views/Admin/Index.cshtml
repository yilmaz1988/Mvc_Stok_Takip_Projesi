@model BonusMvcStok.Models.Entity.tbladmin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">

    Yeni Admin Tanımla

</button>

<div class="modal" id="Modal1">

    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">

                <h3 class="modal-title" style="color:coral">Admin Ekleme Paneli</h3>

            </div>

            <form method="post" action="/Admin/YeniAdmin">

                <div class="modal-body">

                    <label>

                        Kullanıcı Adı

                    </label>

                    @Html.TextBoxFor(m => m.kullanici, new { @class = "form-control", @required="required", placeholder="Yeni Admin" })

                    <br />

                    <label>

                        Şifre

                    </label>

                    @Html.PasswordFor(m => m.sifre, new { @class = "form-control", @required = "required", placeholder="Şifre"})



                    <br />

                    <button type="submit" class="btn btn-info">Kaydet</button>

                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>

                </div>

            </form>

        </div>

    </div>

</div>