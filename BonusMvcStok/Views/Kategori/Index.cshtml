@using BonusMvcStok.Models.Entity
@model List<tblkategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td><a href="/Kategori/KategoriSil/@x.id" class="btn btn-sm btn-danger" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?')"><i class="fas fa-trash-alt"></i> Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@x.id" class="btn btn-sm btn-success"><i class="fas fa-pen-fancy"></i> Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Kategori/YeniKategori" class="btn btn-info" style="color:black; font-family:sans-serif, Times, serif;" >Yeni Kategori</a>